<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="123dp"
        android:layout_height="101dp">
        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ft_icon_cy_fsr_bj"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="编辑"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/img_edit"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/img_edit"
            app:layout_constraintBottom_toBottomOf="@id/img_edit"
            />

        <View
            android:id="@+id/view_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#eeeeee"
            app:layout_constraintStart_toStartOf="@id/txt_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_edit"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ft_icon_cy_fsr_sc"
            app:layout_constraintStart_toStartOf="@id/img_edit"
            app:layout_constraintTop_toBottomOf="@id/img_edit"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="删除"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/img_delete"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/img_delete"
            app:layout_constraintBottom_toBottomOf="@id/img_delete"
            />


    </android.support.constraint.ConstraintLayout>




</LinearLayout>